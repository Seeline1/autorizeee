<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" MinHeight="550" MinWidth="1050" Height="450" Width="1050">
    <Grid Background="Aquamarine">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Frame ContentRendered="MainFrame_ContentRendered" Grid.Column="1" Name="MainFrame" NavigationUIVisibility="Hidden"></Frame>
        <StackPanel Grid.Column="0">
            <Button Content="Авторизация" Width="170" Height="30" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="5" Background="White" Click="Button_Click"></Button>
            <Button Content="Регистрация" Width="170" Height="30" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="5" Background="White" Click="Button_Click_1"></Button>
        </StackPanel>
        <Button Name="btnback" Content="Назад" Width="170" Height="30" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="5" Background="White" Click="Button_Click_2"></Button>
        </Grid>
</Window>
