<Page x:Class="WpfApp1.autorize"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="autorize">

    <Grid Background="Beige">
        <StackPanel Orientation="Vertical" VerticalAlignment="Center">
            <TextBlock Text="Логин" Grid.Row="1" Width="50" Height="20" HorizontalAlignment="Left" Margin="5"></TextBlock>
            <TextBlock Text="Пароль" Grid.Row="1" Width="50" Height="20" HorizontalAlignment="Left" Margin="5"></TextBlock>
        </StackPanel>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" >
            <TextBox Name="login" Text="" Width="500" Background="White" Margin="5"></TextBox>
            <TextBox Name="password" Text="" Width="500" Background="White" Margin="5"></TextBox>
        </StackPanel>
        <TextBlock Text="Авторизация" Grid.Row="1" FontSize="30" HorizontalAlignment="Center"></TextBlock>
        <Button Content="Войти" Width="200" Height="30" Margin="296,176,296,43" Grid.Row="1" Click="Button_Click"/>
    </Grid>
</Page>
